<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/nuconnect"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NUConnect"
        tools:targetApi="31">

        <!-- Activities -->
        <activity android:name=".Welcomepage" android:exported="false" />
        <activity android:name=".CreateanAccount" android:exported="false" />
        <activity android:name=".SecondActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity android:name=".about" android:exported="false" />
        <activity android:name=".Settings" android:exported="false" />
        <activity android:name=".Pofile" android:exported="false" />
        <activity android:name=".faqs" android:exported="false" />
        <activity android:name=".connecttootherdevice" android:exported="false" />
        <activity android:name=".ConnectedSuccessfully" android:exported="false" />
        <activity android:name=".TimeRemaining" android:exported="false" />
        <activity android:name=".GenerateCode" android:exported="false" />


        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>


</manifest>
