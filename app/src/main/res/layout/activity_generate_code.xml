<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35408e"
    tools:context=".GenerateCode">

    <TextView
        android:id="@+id/textViewSettings"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Generate Code"
        android:textColor="#ffde55"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="88dp"
        android:background="#FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonback1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/backbuttonn"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code4"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.711"
        app:srcCompat="@drawable/nuconnect" />

    <TextView
        android:id="@+id/code4"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code3" />

    <TextView
        android:id="@+id/code2"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code1" />

    <TextView
        android:id="@+id/code8"
        android:layout_width="29dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code7" />

    <TextView
        android:id="@+id/code5"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <TextView
        android:id="@+id/code3"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code2" />

    <TextView
        android:id="@+id/code6"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code5" />

    <TextView
        android:id="@+id/code7"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/code6" />

    <TextView
        android:id="@+id/code1"
        android:layout_width="31dp"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:background="#ffde55"
        android:paddingTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toStartOf="@+id/code2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/buttonGenerateCode"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:backgroundTint="#ffde55"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Generate"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/ClickonConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/ClickonConnect"
        android:layout_width="351dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Click on connect to automatically connect to the wifi"
        android:textColor="#ffde55"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#ffde55"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Connect"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ClickonConnect"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonGenerateforanotherdevice"
        android:layout_width="251dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#ffde55"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Generate for another device"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonConnect"
        app:layout_constraintVertical_bias="0.104" />


</androidx.constraintlayout.widget.ConstraintLayout>
