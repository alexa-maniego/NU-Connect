<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35408e"
    tools:context=".TimeRemaining">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="92dp"
        android:background="#FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/textViewSettings3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewSettings3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbutton___copy__6_" />

    <TextView
        android:id="@+id/textViewSettings3"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Wi-Fi Usage"
        android:textColor="#ffde55"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/block1"
        android:layout_width="382dp"
        android:layout_height="202dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/block2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/block2"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/bg_block" />

    <TextView
        android:id="@+id/timeleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Left"
        android:textColor="#ffde55"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="@+id/block1"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="@+id/block1"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:10:00"
        android:textColor="#ffffff"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/block1"
        app:layout_constraintEnd_toEndOf="@+id/block1"
        app:layout_constraintStart_toStartOf="@+id/block1"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <ImageView
        android:id="@+id/block2"
        android:layout_width="382dp"
        android:layout_height="203dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="@+id/block3"
        app:layout_constraintStart_toStartOf="@+id/block3"
        app:layout_constraintTop_toBottomOf="@+id/block1"
        app:srcCompat="@drawable/bg_block" />

    <TextView
        android:id="@+id/totaltime"
        android:layout_width="103dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:text="Total Time Used"
        android:textColor="#ffde55"
        app:layout_constraintEnd_toEndOf="@+id/block2"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="@+id/block2"
        app:layout_constraintTop_toTopOf="@+id/block2" />

    <TextView
        android:id="@+id/totalTimeUsedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="65dp"
        android:text="02:50:00"
        android:textColor="#ffffff"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/block2"
        app:layout_constraintEnd_toEndOf="@+id/block2"
        app:layout_constraintStart_toStartOf="@+id/block2"
        app:layout_constraintTop_toTopOf="@+id/block2" />

    <ImageView
        android:id="@+id/block3"
        android:layout_width="382dp"
        android:layout_height="203dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/block2"
        app:srcCompat="@drawable/bg_block" />


    <TextView
        android:id="@+id/netspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="154dp"
        android:text="Internet Speed"
        android:textColor="#ffde55"
        app:layout_constraintBottom_toBottomOf="@+id/block3"
        app:layout_constraintEnd_toEndOf="@+id/block3"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@+id/block3"
        app:layout_constraintTop_toTopOf="@+id/block3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25mb/s"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/block3"
        app:layout_constraintEnd_toEndOf="@+id/block3"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/block3"
        app:layout_constraintTop_toTopOf="@+id/block3" />

    <TextView
        android:id="@+id/netText"
        android:layout_width="116dp"
        android:layout_height="19dp"
        android:text="Download/Upload"
        android:textColor="#ffde55"
        app:layout_constraintBottom_toBottomOf="@+id/block3"
        app:layout_constraintEnd_toEndOf="@+id/block3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/block3"
        app:layout_constraintTop_toTopOf="@+id/block3"
        app:layout_constraintVertical_bias="0.695" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#35408e"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/imageHomeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/home_button" />

        <ImageButton
            android:id="@+id/imageProfileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/profilebut" />

        <ImageButton
            android:id="@+id/imageSettingsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/settings_b" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="195dp"
        android:layout_height="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="44dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@android:drawable/progress_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/block1"
        app:layout_constraintEnd_toEndOf="@+id/block1"
        app:layout_constraintStart_toStartOf="@+id/block1"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView" />



</androidx.constraintlayout.widget.ConstraintLayout>