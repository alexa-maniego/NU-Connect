<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="408dp"
        android:layout_height="285dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="2"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="122dp">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 1"
            android:src="@drawable/ic_avatar1" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 2"
            android:src="@drawable/ic_avatar2" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 3"
            android:src="@drawable/ic_avatar3" />

        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 4"
            android:src="@drawable/ic_avatar4" />

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 5"
            android:src="@drawable/ic_avatar5" />

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="Avatar 6"
            android:src="@drawable/ic_avatar6" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
